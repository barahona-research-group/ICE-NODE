#PBS -lselect=1:ncpus=32:mem=124gb

#PBS -lwalltime=72:0:0

#PBS -J 1-50

# Setup environement using .bashrc
source $HOME/.bashrc
$HOME/anaconda3/condabin/conda activate mimic3-snonet

# Clone repository and checkout to the given tag name.
git clone git@github.com:A-Alaa/MIMIC-SNONET.git $TMPDIR/MIMIC-SNONET --branch $EXP_TAG --single-branch 

cd $TMPDIR/MIMIC-SNONET

# Load modules for any applications

# Run program
$HOME/anaconda3/envs/mimic3-snonet/bin/python -m mimicnet.hpo-multi \
--output-dir $HOME/GP/ehr-data/mimic3-snonet-exp/$EXP_TAG \
--mimic-processed-dir ~/GP/ehr-data/mimic3-transforms \
--study-name $EXP_TAG \
--store-url $EXP_STORE_URL \
--num-trials 3 \
-N 5 \
--cpu 

mkdir $PBS_O_WORKDIR/$PBS_JOBID
cp * $PBS_O_WORKDIR/$PBS_JOBID
